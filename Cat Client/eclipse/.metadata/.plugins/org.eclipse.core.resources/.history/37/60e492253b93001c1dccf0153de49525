package airclient.util;

public class IndexFinder {
	// Linear-search function to find the index of an element
    public static int findIndexString(String arr[], String t) {
 
        // if array is Null
        if (arr == null) {
            return -1;
        }
 
        // find length of array
        int len = arr.length;
        int i = 0;
 
        // traverse in the array
        while (i < len) {
            // if the i-th element is t
            // then return the index
            if (arr[i] == t) {
                return i;
            }
            else {
                i += 1;
            }
        }
        return -1;
    }
}
